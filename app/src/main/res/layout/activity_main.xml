<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.github.florent37.shapeofview.shapes.ArcView
        android:id="@+id/activity_settings_arcView"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:elevation="0dp"
        app:shape_arc_cropDirection="outside"
        app:shape_arc_height="35dp"
        app:shape_arc_position="bottom">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/activity_settings_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bar"
            android:elevation="0dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/activity_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="@string/app_name"/>

            </RelativeLayout>


        </androidx.appcompat.widget.Toolbar>


    </com.github.florent37.shapeofview.shapes.ArcView>






    <ListView
        android:id="@+id/main_activity_list_view"
        android:layout_width="match_parent"
        android:layout_below="@id/activity_settings_arcView"
        android:layout_height="match_parent"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clickable="false"
        android:focusable="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"/>



</RelativeLayout>