<?xml version="1.0" encoding="utf-8"?>

<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#40248127"> <!-- Ripple color :: WHITE -->
    <item>
        <shape
            android:shape="oval" >

            <solid
                android:color="@android:color/transparent" />

            <stroke
                android:color="#248127"
                android:width="0dp" />

            <corners
                android:radius="4dp" />
            <padding
                android:bottom="4dp"
                android:top="4dp"
                android:right="4dp"
                android:left="4dp"/>

        </shape>
    </item>

    <!-- Make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="#248127" />

        </shape>

    </item>

</ripple>